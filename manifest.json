{
  "manifest_version": 3,
  "name": "MiroMiro Clone - Premium Inspector",
  "version": "1.0",
  "description": "Premium element inspector, asset extractor, and style-to-tailwind converter.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "overlay.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}